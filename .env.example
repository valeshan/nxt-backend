# Copy to .env for local development

# Local dev DB
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/nxt_dev?schema=public"

# Shadow DB used ONLY for prisma migrate dev / reset / db push
# Never set SHADOW_DATABASE_URL in production.
# Production uses DATABASE_URL only and runs `prisma migrate deploy`.
SHADOW_DATABASE_URL="postgresql://localhost:5432/nxt_shadow?schema=public"

# App env
NODE_ENV="development"

JWT_VERIFY_SECRET="your-secret-here"
TOKEN_ENCRYPTION_KEY="your-32-char-min-key-here"
PORT=4001

# Xero Integration
XERO_CLIENT_ID=""
XERO_CLIENT_SECRET=""
XERO_REDIRECT_URI=""
XERO_WEBHOOK_SECRET=""
APP_URL=""
FRONTEND_URL="https://app.thenxt.ai"
XERO_SYNC_TIMEOUT_MINUTES=60

# AWS Configuration
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
S3_INVOICE_BUCKET="nxt-invoices-dev"

# Pusher Configuration
PUSHER_APP_ID=""
PUSHER_KEY=""
PUSHER_SECRET=""
PUSHER_CLUSTER="ap4"

# Feature Flags
ENABLE_XERO_OCR="false"

# Infrastructure
REDIS_URL=""
LOG_LEVEL="info"
