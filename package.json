{
  "name": "xero-integration-service",
  "version": "1.0.0",
  "description": "Backend service for Xero integration metadata",
  "main": "dist/src/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "npx prisma generate && tsc -p tsconfig.build.json",
    "start": "node dist/src/server.js",
    "pretest": "npx prisma generate",
    "test": "vitest run",
    "prisma:migrate:dev": "NODE_ENV=development prisma migrate dev --schema prisma/schema.dev.prisma",
    "prisma:migrate:reset": "NODE_ENV=development prisma migrate reset --schema prisma/schema.dev.prisma",
    "prisma:migrate:deploy": "NODE_ENV=production prisma migrate deploy",
    "prisma:migrate:deploy:safe": "NODE_ENV=production bash scripts/safe-migrate-deploy.sh",
    "check:db-safety": "tsx scripts/check-db-safety.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write ."
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.940.0",
    "@aws-sdk/client-textract": "^3.940.0",
    "@aws-sdk/s3-request-presigner": "^3.940.0",
    "@fastify/compress": "^7.0.3",
    "@fastify/cookie": "^9.3.1",
    "@fastify/cors": "^9.0.1",
    "@fastify/formbody": "^7.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/multipart": "^8.3.1",
    "@fastify/rate-limit": "^9.1.0",
    "@prisma/client": "^5.10.2",
    "@sentry/node": "^8.0.0",
    "@types/nodemailer": "^7.0.4",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.66.0",
    "date-fns": "^4.1.0",
    "fastify": "^4.26.2",
    "fastify-plugin": "^4.5.1",
    "fastify-raw-body": "^4.3.0",
    "fastify-type-provider-zod": "^1.1.9",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.11",
    "pino-pretty": "^13.1.3",
    "pusher": "^5.2.0",
    "sharp": "^0.33.2",
    "xero-node": "^13.3.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/fast-levenshtein": "^0.0.4",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.24",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "dotenv": "^17.2.3",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "prisma": "^5.10.2",
    "supertest": "^6.3.4",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  }
}
